<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ボタンが押されていないときの定義 -->
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

    <!-- 枠線 width:線の幅、color:線の色 -->
    <stroke
        android:width="2dp"
        android:color="#34465d" />

    <padding
        android:top="4dp"
        android:left="6dp"
        android:right="6dp"
        android:bottom="4dp"
        />

    <!-- 角の丸み -->
    <corners android:radius="6dp" />
        </shape>
    </item>

    <!-- ボタンが押されたときの定義 -->
    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

        <stroke
            android:width="6dp"
            android:color="#BC4872" />

        <padding
            android:top="4dp"
            android:left="6dp"
            android:right="6dp"
            android:bottom="4dp"
            />

        <!-- 角の丸み -->
        <corners android:radius="6dp" />
        </shape>
    </item>

</selector>