<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendCsv">

    <!-- ヘッダー　情報 -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#1889e4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/header_view"
        app:icon="@drawable/ic_keyboard_arrow_01"
        >


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/ic_keyboard_arrow_01"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:id="@+id/back_btn_10"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="40dp"
            android:paddingTop="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="6dp"
            android:text="テスト"
            android:drawableLeft="@drawable/ic_account_01"
            android:drawablePadding="2dp"
            android:singleLine="true"
            android:gravity="center"
            android:id="@+id/user_num_10"
            />

    </FrameLayout>

    <!-- ヘッダー　情報 END -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/se_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp"
        android:text="棚卸データを送信する"
        app:icon="@drawable/ic_cloud_upload_black_24dp"
        app:iconGravity="textStart"
        app:iconPadding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/header_view"
        app:layout_constraintLeft_toLeftOf="parent"
     />


    <TextView
        android:id="@+id/test_send_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/se_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:textColor="@color/back_color_01"
        android:padding="10dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/test_send_view"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:id="@+id/test_send_view_02"
        android:textColor="#000000"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/test_send_view_02"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:id="@+id/test_send_view_03"
        android:textColor="#000000"
        />


</androidx.constraintlayout.widget.ConstraintLayout>